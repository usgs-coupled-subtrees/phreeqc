        N(5)            0.29    as NO3
        N(-3)           0.03    as NH4
        O(0)            1.0     O2(g)   -0.7
END

SURFACE 1-2
	equilibrate with solution 1
	SurfOH	0.001	1071.	0.33

SURFACE_MASTER_SPECIES
	Surf	SurfOH

SURFACE_SPECIES

	SurfOH = SurfOH
	-log_k	0.0

	SurfOH  + H+ = SurfOH2+
	-log_k	6.3

	SurfOH = SurfO- + H+
	-log_k	-7.1

	SurfOH + MoO4-2 + H+ = SurfMoO4- + H2O
	-log_k	8.8

	SurfOH + MoO4-2 = SurfOHMoO4-2
	-log_k	2.2

SOLUTION_MASTER_SPECIES
	Mo	MoO4-2		1.0	160.94		95.94

SOLUTION_SPECIES

	MoO4-2 = MoO4-2
	-log_k	0.0

	MoO4-2 + H+ = HMoO4-
	-log_k	4.24

	MoO4-2 + 2H+ = H2MoO4
	-log_k	6.85

	MoO4-2 + Ca+2 = CaMoO4
	-log_k	2.57

	MoO4-2 + Mg+2 = MgMoO4
	-log_k	3.03

